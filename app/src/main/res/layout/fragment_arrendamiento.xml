<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="RUC: " />

                <com.libizo.CustomEditText
                    android:id="@+id/etxRuc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="RUC"
                    android:inputType="number"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Razon Social:"
                    android:layout_marginTop="5dp"/>

                <com.libizo.CustomEditText
                    android:id="@+id/etxRazonSocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Razon Social"
                    android:inputType="textPersonName"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Fecha:"
                        android:gravity="center"
                        android:layout_marginTop="5dp"/>

                    <com.libizo.CustomEditText
                        android:id="@+id/etxCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:hint="Fecha documento"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="12dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:text=""
                        android:textSize="15sp"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setBorderColor="#d4d2d3"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setCornerRadius="20dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Numero Documento:"
                        android:layout_marginTop="10dp"/>

                    <com.libizo.CustomEditText
                        android:id="@+id/etxNDocumento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:hint="Numero Documento"
                        android:inputType="number"
                        android:paddingBottom="12dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:text=""
                        android:textSize="15sp"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setBorderColor="#d4d2d3"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setCornerRadius="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Monto:"
                        android:layout_marginTop="5dp"/>

                    <com.libizo.CustomEditText
                        android:id="@+id/etxMonto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:hint="Monto"
                        android:inputType="numberDecimal"
                        android:paddingBottom="12dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:text=""
                        android:textSize="15sp"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setBorderColor="#d4d2d3"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setCornerRadius="20dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Tipo Gasto"
                        android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/spnTipoGasto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:id="@+id/img_foto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_add_a_photo"/>

                    <ImageButton
                        android:id="@+id/btnFoto"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/button_background"
                        android:src="@drawable/ic_add_a_photo_white" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:paddingTop="10dp">

                    <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="Guardar"
                        android:textColor="@color/white"
                        android:background="@drawable/button_background"/>

                </RelativeLayout>

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>