<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:id="@+id/lnyCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="titulo de empresa"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp">

            <FrameLayout
                android:background="@color/pendienteColor"
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lytFondo"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/LinerLDatos"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_margin="2dp">

                        <TextView
                            android:id="@+id/txvDescripcion"
                            android:text="Descripcion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"  />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txvMontoTittle"
                                android:text="Monto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:layout_marginLeft="2dp" />
                            <TextView
                                android:id="@+id/txvAcuentaTittle"
                                android:text="A cuenta"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:layout_marginLeft="2dp" />
                            <TextView
                                android:id="@+id/txvSaldoTittle"
                                android:text="Saldo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:layout_marginLeft="2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txvMonto"
                                android:text="2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:transitionName="monto"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/txvAcuenta"
                                android:text="2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:transitionName="acuenta"
                                android:textSize="14sp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/txvSaldo"
                                    android:text="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:transitionName="saldo"
                                    android:textSize="14sp"/>

                                <Button
                                    android:id="@+id/btnArrow"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:rotation="270"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/ic_keyboard_backspace" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <View
                        android:id="@+id/view6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp">


                        <Button
                            android:id="@+id/btnDatos"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:text="Datos"
                            android:textColor="@color/white"
                            android:background="@drawable/button_style"/>

                        <Button
                            android:id="@+id/btnRendicion"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:text="Rendicion"
                            android:textColor="@color/white"
                            android:background="@drawable/button_style"/>

                        <ImageButton
                            android:id="@+id/btnEnviarResumen"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_menu_send"
                            android:background="@drawable/button_style"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>


</LinearLayout>