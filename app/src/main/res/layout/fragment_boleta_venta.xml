<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="RUC: "
                    android:layout_marginTop="5dp"/>

                <com.libizo.CustomEditText
                    android:id="@+id/etxRuc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="RUC"
                    android:inputType="number"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Razon Social:"
                    android:layout_marginTop="5dp"/>

                <com.libizo.CustomEditText
                    android:id="@+id/etxRazonSocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Razon Social"
                    android:inputType="textPersonName"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="N: Documento:"
                    android:layout_marginTop="5dp"/>

                <com.libizo.CustomEditText
                    android:id="@+id/etxNDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="N: Documento"
                    android:inputType="textPersonName"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Fecha Documento: "
                    android:layout_marginTop="5dp"/>

                <com.libizo.CustomEditText
                    android:id="@+id/etxCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="feacha documento"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="20dp"/>

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:layout_margin="10dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tipo Moneda: "
                    android:layout_marginTop="5dp"/>

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spnTipoMoneda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Valor Venta: "
                    android:layout_marginTop="5dp"/>


                <com.libizo.CustomEditText
                    android:id="@+id/etxValorVenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Valor Venta"
                    android:inputType="numberDecimal"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/chkAfectoIgv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="IGV"
                        android:layout_weight="0.7"/>

                    <TextView
                        android:id="@+id/txvMontoIGV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0.00"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Total Venta: "
                        android:layout_weight="1"/>


                    <TextView
                        android:id="@+id/etxPrecioVenta"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0.00"
                        android:layout_weight="1"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Otros Gastos: "
                    android:layout_marginTop="5dp"/>


                <com.libizo.CustomEditText
                    android:id="@+id/etxOtrosGastos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Otros Gastos"
                    android:inputType="numberDecimal"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tipo gasto: "
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/spnTipoGasto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Seleccionar"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Observaciones: "
                    android:layout_marginTop="5dp"/>

                <com.libizo.CustomEditText
                    android:id="@+id/etxObservaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:hint="Observaciones"
                    android:inputType="textPersonName"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="20dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btnGuardar"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Guarda"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background"
                            android:layout_marginRight="10dp"/>

                        <Button
                            android:id="@+id/btnAgregarFoto"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="10dp"
                            android:drawableLeft="@drawable/ic_add_a_photo"
                            android:text="Foto"
                            android:gravity="center"/>

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>