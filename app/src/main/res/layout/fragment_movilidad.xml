<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tipo de Movilidad: "
                    android:layout_marginTop="5dp"/>

                <info.hoang8f.android.segmented.SegmentedGroup
                    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/segmented2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    segmentedgroup:sc_border_width="1dp"
                    segmentedgroup:sc_corner_radius="10dp"
                    segmentedgroup:sc_tint_color="@color/azul_per01"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/btnIndividual"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Individual"
                        android:checked="true"
                        style="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/btnMasivo"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Masivo"
                        style="@style/RadioButton" />
                </info.hoang8f.android.segmented.SegmentedGroup>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Fecha del viaje:"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true"
                        android:layout_marginTop="5dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Del" />

                        <com.libizo.CustomEditText
                            android:id="@+id/etxFechaDesde"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:hint="inicio"
                            android:inputType="textEmailAddress"
                            android:paddingBottom="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="12dp"
                            android:text=""
                            android:textSize="14sp"
                            app:libIZO_setBorderColor="#d4d2d3"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lytfechaFinal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/txtFechaHasta"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Al"/>

                        <com.libizo.CustomEditText
                            android:id="@+id/etxFechaHasta"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:hint="fin"
                            android:inputType="textEmailAddress"
                            android:paddingBottom="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="12dp"
                            android:text="-"
                            android:textSize="14sp"
                            app:libIZO_setBorderColor="#d4d2d3"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="20dp" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Motivo del Viaje:  "
                    android:layout_marginTop="5dp"/>

                <com.libizo.CustomEditText
                    android:id="@+id/etxMotivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="motivo"
                    android:inputType="textPersonName"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Destino Desplazamiento:  "
                    android:layout_marginTop="5dp"/>

                <com.libizo.CustomEditText
                    android:id="@+id/etxDestino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="destino desplazamiento"
                    android:inputType="textPersonName"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Monto Gastado:  "
                    android:layout_marginTop="5dp"/>

                <com.libizo.CustomEditText
                    android:id="@+id/etxMonto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="monto gastado"
                    android:inputType="numberDecimal"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text=""
                    android:textSize="15sp"
                    app:libIZO_setBorderColor="#d4d2d3"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tipo de Gasto: "
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/spnTipoGasto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center"
                    android:paddingTop="10dp">

                        <Button
                            android:id="@+id/btnGuardar"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:text="Guardar"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background"
                            android:layout_marginRight="10dp"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>