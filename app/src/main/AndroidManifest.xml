<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.overall.developer.overrendicion">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.net.conn.CONNECTIVITY_CHANGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".RendicionApplication"
        android:icon="@drawable/ic_launcher"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.user.view.Login.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.liquidacion.view.pendiente.PendienteActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.user.view.CreateAccount.CreateAccountActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity android:name=".ui.liquidacion.view.rendicion.RendicionActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.liquidacion.view.formularios.FormularioActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.liquidacion.view.datosGenerales.DatosGeneralesActivity" />

        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService" android:enabled="true" />

        <service
            android:name=".utils.notification.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d5ba6603f446f535647ee0629e0ca511ed970e4f" />

        <receiver
            android:name=".utils.background.InitialServiceBrodcast"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
        </receiver>

        <service
            android:name=".utils.background.SendDataService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false"/>

        <activity android:name=".ui.user.view.Drawable.RecoveryPasswordActivity" />
        <activity android:name=".ui.user.view.Drawable.UpdateEmailActivity" />

    </application>

</manifest>